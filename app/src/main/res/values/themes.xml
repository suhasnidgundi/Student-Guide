<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.StudentGuide" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/text_on_secondary</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_variant</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Component styles -->
        <item name="materialCardViewStyle">@style/AppCard</item>
        <item name="textInputStyle">@style/InputField</item>
        <item name="materialButtonStyle">@style/PrimaryButton</item>

        <!-- Default font -->
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Main theme -->
    <style name="Theme.StudentGuide" parent="Base.Theme.StudentGuide" />

    <!-- NoActionBar theme - this was missing and causing the error -->
    <style name="Theme.StudentGuide.NoActionBar" parent="Theme.StudentGuide">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Optional: AppBarOverlay theme for app bars -->
    <style name="Theme.StudentGuide.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <!-- Optional: PopupOverlay theme for popups -->
    <style name="Theme.StudentGuide.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>